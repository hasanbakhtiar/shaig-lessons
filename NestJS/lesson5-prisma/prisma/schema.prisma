generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Employee {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  email    String   @unique
  role     Role
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

enum Role {
  INTERN
  ENGINEER
  ADMIN
}
